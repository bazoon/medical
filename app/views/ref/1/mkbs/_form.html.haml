= simple_form_for @ref_mkb do |f|
  -if @ref_mkb.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ref_mkb.errors.count, "error")} Сохранение невозможно! Есть ошибки.:"
      %ul
        - @ref_mkb.errors.full_messages.each do |msg|
          %li= msg
  =f.input :code,:label =>"Код"
  =f.input :name,:label =>"Наименование"
  =f.submit "Сохранить"
