%h3 Структура численного состава
- report "PeopleStructure" do |p|
  - p.prepare(sd,ed,years)

  %table.condensed-table.zebra-striped

    %thead
      %tr
        %th Наименование
        -years.each do |k|
          %th{:colspan =>2}= k
      %tr
        %th 
        -years.each do |k|
          %th факт
          %th % 

    %tbody

      - {0 => "ИОВ",
         1 => "УОВ",
         2 => "Участники, вооруженных конфликтов",
         3 => "Члены семей погибших военнослужащих",
         4 => "Жители блокадного Ленинграда",
         5 => "Бывшие малолетние узники концлагерей",
         6 => "Участники трудового фронта",
         7 => "Репрессированные",
         8 => "Ликвидаторы аварии на ЧАЭС",
         9 => "Ветераны труда",
         10 => "Пенсионеры"}.each do |k,v|
        %tr
          %td
            =v
            -p.years.each do |year|
              %td= p.observed(year,k)
              %td= p.get_rel(p.observed(year,k),p.year_total(year))
      %tr
        %td
          Всего
          -p.years.each do |year|
            %td= p.year_total(year)
            %td 100 %
