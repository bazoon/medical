= link_to content_tag(:span,"",class: "ui-icon ui-icon-triangle-1-w"), operations_client_path(@client)
%br
%h1= @client.fio unless @client.nil?
%br
%h2 Лабораторные анализы
%br

-unless flash.empty?
  %p#notice= notice


-if @lab_tests.count > 0 
  %table#newspaper-a
    %tr
      %th Дата
      %th Тип
      %th Результат
      %th
      %th

    - @lab_tests.each do |lab_test|
      %tr
        %td= l lab_test.test_date
        %td= lab_test.lab_test_type.name
        %td= lab_test.result

        %td= link_to content_tag(:span,"",class: "ui-icon ui-icon-pencil"),edit_client_lab_test_path(@client,lab_test)
        %td= link_to content_tag(:span,"",class: "ui-icon ui-icon-minus") , client_lab_test_path(@client,lab_test), :confirm => 'Are you sure?', :method => :delete
-else
  =render "clients/empty"

%br

= link_to t(:new_record), new_client_lab_test_path 



